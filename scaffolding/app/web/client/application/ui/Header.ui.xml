<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<!-- Header.ui.xml -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

	<ui:with type="@base@.client.place.NameTokens" field="nameTokens"></ui:with>
	<ui:with type="@base@.client.i18n.AppConstants" field="constants"></ui:with>

	<b:Navbar>

		<b:NavbarHeader>
			<b:NavbarBrand>@module@</b:NavbarBrand>
			<b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
		</b:NavbarHeader>
		
		<b:NavbarCollapse b:id="navbar-collapse">
			<b:NavbarNav>
				<b:ListItem active="true" ui:field="home" text="{constants.home}" />
			</b:NavbarNav>

			<b:Div ui:field="anonymous">
				<b:NavbarForm pull="RIGHT">
					<b:TextBox placeholder="{constants.username}" ui:field="username" />
					<b:Input type="PASSWORD" placeholder="{constants.password}" ui:field="password" />
					<b:Button text="{constants.signin}" type="PRIMARY" ui:field="signin" />
				</b:NavbarForm>
			</b:Div>

			<b:Div ui:field="authenticated">
				<b:NavbarNav pull="RIGHT">
					<b:ListDropDown ui:field="authenticatedMenu">
						<b:AnchorButton dataToggle="DROPDOWN" ui:field="authenticatedUser" />
						<b:DropDownMenu>
							<b:ListItem text="{constants.signout}" icon="SIGN_OUT" ui:field="signout" />
						</b:DropDownMenu>
					</b:ListDropDown>
				</b:NavbarNav>
			</b:Div>
		</b:NavbarCollapse>
	</b:Navbar>

</ui:UiBinder>