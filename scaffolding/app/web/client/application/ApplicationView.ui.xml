<!-- AppImpl.ui.xml -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:my="urn:import:@base@.client.application.ui">

	<g:HTMLPanel>

		<div ui:field="loadingMessage" style="position:absolute; top:0; left:0; background-color:yellow;">
			Loading...
		</div>

		<g:FlowPanel>

			<my:Header />

			<b:Container>

				<b:Breadcrumbs>
					<b:ListItem text="one" />
					<b:ListItem text="two" />
					<b:ListItem text="three" />
				</b:Breadcrumbs>

				<b:Alert ui:field="alert" visible="false"/>

				<g:SimplePanel ui:field="mainContentPanel" />
			</b:Container>

			<my:Footer />

		</g:FlowPanel>

	</g:HTMLPanel>

</ui:UiBinder>